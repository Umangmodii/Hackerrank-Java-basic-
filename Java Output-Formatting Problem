import java.util.*;
import java.util.Scanner;

public class Solution
{
   public static void main(String[] args)
 {
    Scanner scn = new Scanner(System.in); 

    System.out.println("================================");
   

      for(int i=0; i<3; i++)
    {
        int myint = scn.nextInt();
        String mystr = scn.next();
        System.out.println("%-15s%03d%n",myint,mystr);
    }

    System.out.println("================================");     

}



